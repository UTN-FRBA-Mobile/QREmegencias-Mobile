<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Name -->

        <com.qre.ui.components.DetailValueView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_account_grey600_24dp"
            app:title="@string/name"
            app:value="@string/app_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_primary_contact"
            android:layout_alignBottom="@id/contact_name"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/contact_name"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:src="@drawable/ic_star_black_24dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Phone -->

        <com.qre.ui.components.DetailValueView
            android:id="@+id/contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_phone_grey600_24dp"
            app:title="@string/phone"
            app:value="@string/app_name" />

        <ImageButton
            android:id="@+id/button_erase_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/contact_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/contact_phone"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_black_24dp" />

    </RelativeLayout>

</LinearLayout>