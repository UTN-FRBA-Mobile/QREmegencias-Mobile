<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <!-- Name -->

    <com.qre.ui.components.DetailValueView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_pill_grey600_24dp"
        app:title="@string/name"/>

    <!-- Description -->

    <com.qre.ui.components.DetailValueView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_information_outline_grey600_24dp"
        app:title="@string/description" />

    <!-- Amount -->

    <com.qre.ui.components.DetailValueView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_clipboard_text_grey600_24dp"
        app:title="@string/amount" />

    <!-- Period -->

    <com.qre.ui.components.DetailValueView
        android:id="@+id/period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_calendar_clock_grey600_24dp"
        app:title="@string/period" />

</LinearLayout>